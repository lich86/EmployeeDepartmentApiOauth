            <column name="password" value="$2a$10$OJIzk2lcAY93qelEU52pvOmRgkr1X2ehQaiKUBRfd0qYPa/FXcbFy"/>
            <column name="role" value="ADMIN"/>
        </insert>
        <insert tableName="users">
            <column name="id" value="2"/>
